import java.util.*;

@RestController
public class LBOController {
	
	@Autowired
	private LBORepo repo;
	
	@GetMapping("/offers/{category}/{country}")
	public void getOffers(@PathVariable String category,@PathVariable String country) {
//		if(category.equals("all")) {
//		return repo.findByCountryCode(country);
//		}
//	
//		return repo.findByOfferCategoryAndCountryCode(category,country);
		 String possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
		for(int i=1;i<=7038;i++)
		{
			String coupon = "";
			for(int j=1;j<=5;j++)
			{
				Random random = new Random();
				int randomWithNextInt = random.nextInt(62);
				 coupon=coupon+possible.charAt(randomWithNextInt);
				
			}
//			repo.setOfferBySerialNum(coupon,i);
			LocationBasedOffers lbo_temp= repo.getOne(i);
			lbo_temp.setCouponCode(coupon);
			repo.save(lbo_temp);
			
			coupon="";
		}
		System.out.print("Doneeeeeeeeeeeeeee");
	
	}
	
	
	
	
	
	
	

